{
  "ignore": [
    "*.*",
    ".next/",
    ".vscode/",
    "content/",
    "docs/",
    "public/robots.txt",
    ".github/dependabot.yml",
    ".github/ISSUE_TEMPLATE",
    ".github/PULL_REQUEST_TEMPLATE.md",
    ".github/license-check/header-MPLv2.txt"
  ],
  "ignoreFile": ".gitignore",
  "license": ".github/license-check/header-MPLv2.txt",
  "licenseFormats": {
    "js|jsx|ts|tsx": {
      "eachLine": {
        "prepend": "// "
      },
      "append": ""
    },
    "css": {
      "prepend": "/*",
      "append": " */\n",
      "eachLine": {
        "prepend": " * "
      }
    },
    "yaml": {
      "eachLine": {
        "prepend": "# "
      },
      "append": ""
    }
  },
  "trailingWhitespace": "TRIM",
  "regexIdentifier": "##"
}
